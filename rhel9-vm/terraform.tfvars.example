# Example Terraform variables file
# Copy this to terraform.tfvars and customize for your environment

vm_name            = "rhel9-vm"
vm_namespace       = "rhel9-vms"
vm_running         = true

# CPU Configuration
vm_cpu_cores       = 2
vm_cpu_sockets     = 1
vm_cpu_threads     = 1
vm_cpu_limit       = "2"

# Memory Configuration
vm_memory          = "4Gi"
vm_memory_limit    = "4Gi"

# VM Size Label
vm_size            = "medium"

# Storage Configuration
vm_disk_size       = "30Gi"
vm_storage_class   = ""  # Leave empty to use default storage class

# Image Configuration
# Public image (no auth required): quay.io/containerdisks/rhel9:latest
# Red Hat registry (requires pull secret): registry.redhat.io/rhel9/rhel-bootc:latest
vm_image_url       = "quay.io/containerdisks/rhel9:latest"

# SSH Public Key (required for VM access)
# Get your SSH public key with: cat ~/.ssh/id_rsa.pub
vm_ssh_public_key  = "ssh-rsa AAAAB3NzaC1yc2EAAAADAQABAAABgQC... your-public-key-here"

